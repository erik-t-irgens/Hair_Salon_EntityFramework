@{
    Layout = "_Layout";
}

@model HairSalon.Models.Stylist
<div class="card bg-dark">
    <div class="card-header">
        <h4>Add a new Stylist</h4>
    </div>
    <div class="card-body">
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)<br>
    @Html.TextBoxFor(model => model.Name)<br>
    <button type="submit" class="btn btn-outline-success" >Add Stylist</button>
}
</div>
<div class="card-footer">
<p>@Html.ActionLink("Show all Stylists", "Index")</p>
</div>
</div>