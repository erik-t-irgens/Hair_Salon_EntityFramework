@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<div class="card bg-dark">
  <div class="card-header">
  <h2>Stylist Details</h2>
</div>

<div class="card-body">
  <h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
 </div>


 
<div class="card-footer">
  <button class="btn btn-outline-success">@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId})</button>
  <button class="btn btn-outline-warning">@Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId})</button>
  <a class="btn btn-outline-secondary" href="/Stylists">Back</a>
  </div>
  </div>