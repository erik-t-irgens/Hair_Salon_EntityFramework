@{
    Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;
<div class="card bg-dark">
  <div class="card-header">
<h1>Clients</h1>
</div>
<div class="card-body">
@if (@Model.Count == 0)
{
  <h3>No clients have been added yet!</h3>
} 


  @foreach (Client client in Model)
{
  <li class="btn btn-info">@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId}) | @client.Stylist.Name</li>

<hr>
}

</div>
<div class="card-footer">
<a class="btn btn-outline-success" href="Clients/Create">Create Client</a>
<a class="btn btn-outline-secondary" href="/">Home</a>
</div>
</div>